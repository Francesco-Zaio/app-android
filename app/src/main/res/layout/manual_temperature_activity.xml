                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#22000000"
                android:textAppearance="?android:attr/textAppearanceLarge" /> 
            
            <TextView
                android:id="@+id/textView4"
