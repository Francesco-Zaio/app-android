<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

    <!-- User Surname -->
	<com.ti.app.mydoctor.gui.customview.GWTextView
		android:id="@+id/user_surname"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		style="@style/gw_name_label_list_item_style.bold"
        app:typeface="roboto_condensed" />
	
	<!-- User Name -->
	<com.ti.app.mydoctor.gui.customview.GWTextView
		android:id="@+id/user_name"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/user_surname"		 
        style="@style/gw_name_label_list_item_style.bold"
        app:typeface="roboto_condensed" />
	
    <!-- Fiscal Code Label -->
	<com.ti.app.mydoctor.gui.customview.GWTextView
		android:id="@+id/user_cf"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_name"	
		style="@style/gw_label_style.graydark"
		app:typeface="roboto_thin" />

	
	
	<!-- android:layout_alignLeft="@id/cf" -->
</RelativeLayout>
